<h1>Sign In</h1>

<%= form_tag sessions_url do %>
	<%= label_tag :email, 'E-mail' %>
	<%= text_field_tag :email %>
	<%= label_tag :password %>
	<%= password_field_tag :password %><br/>
	<%= submit_tag 'Sign In', class: 'submit' %>
<% end %>
<br/>
<p id='sign_up_request'>Not a member? <%= link_to 'Sign up!', new_user_url %></p>