<!DOCTYPE html>
<html>
<head>
  <title>Gradship</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
	<div class='container'>
		<header>
			<h1><%= link_to 'Gradship', root_url %></h1>
			<ul>
				<% if @current_user.present? %>
					<li><%= link_to 'Profile', user_url(@current_user.id) %></li>
					<li><%= link_to 'Sign Out', sessions_url %></li>
				<% else %>
					<li><%= link_to 'Sign Up', new_user_url %></li>
					<li><%= link_to 'Sign In', new_session_url %></li>		
				<% end %>
			</ul>
		</header>
		<div class='content'>
			<% if flash[:notice] %>
				<%= flash[:notice] %>
			<% end %>
			<%= yield %>
		</div>
		<br/><br/>
		<footer>
			<p class='credit'>&copy; 2012 Gradship</p>
			<ul>
				<li><%= link_to 'About', '#' %></li>
				<li><%= link_to 'Contact Us', '#' %></li>
			</ul>
		</footer>
	</div>
</body>
</html>
