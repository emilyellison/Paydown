$(document).ready( function() {

	// Autocomplete the location when someone types in a bar.

	$(function() {
		var institutions = <%= Institution.all.collect(&:name).uniq.sort.to_json.html_safe %>;
		$( "#education_school" ).autocomplete({
			source: institutions,
			delay: 0
		});
	});
	
	$("#user_graduate").change(function() {
		 $("#label_user_graduate").toggleClass("checked", this.checked)
	}).change();
	
	$("#user_benefactor").change(function() {
		 $("#label_user_benefactor").toggleClass("checked", this.checked)
	}).change();

});